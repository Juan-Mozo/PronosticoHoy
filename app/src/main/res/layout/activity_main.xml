<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/icono"
        android:layout_width="121dp"
        android:layout_height="101dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/codigoPostalEditText"
        app:layout_constraintEnd_toEndOf="@+id/codigoPostalEditText"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/codigoPostalEditText"
        app:srcCompat="@android:drawable/ic_menu_compass" />

    <Button
        android:id="@+id/enviarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/enviarBoton"
        app:layout_constraintEnd_toEndOf="@+id/codigoPostalEditText"
        app:layout_constraintStart_toStartOf="@+id/codigoPostalEditText"
        app:layout_constraintTop_toBottomOf="@+id/codigoPostalEditText" />

    <EditText
        android:id="@+id/codigoPostalEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/codigoPostalTextView"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.217" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaPronostico"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="5dp"
        android:background="@color/celestePastel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enviarButton" />

</androidx.constraintlayout.widget.ConstraintLayout>